pipeline {
	agent any
		stages {
			stage("Checkout") {
				steps {
					git url: 'https://github.com/AvielCo/ParkNBark'
				}
			}
			stage("Build"){
				    if (isUnix()) {
					sh './gradlew clean test --no-daemon'

				    } 
				    else {
					bat 'gradlew.bat clean build'
				    }
				}

		}
	}
