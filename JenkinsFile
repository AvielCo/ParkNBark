pipeline {
	agent any
		stages {
			stage("Checkout") {
				steps {
					git url: 'https://github.com/AvielCo/ParkNBark'
				}
			}
			stage("build debug APK") {
				steps {
					sh "chmod +x gradlew"
					sh """./gradlew assembleDebug 
              					./gradlew assembleRelease """
				}
			}
			sudo chown -R jenkins:jenkins /opt/android-sdk/
		}
	}
