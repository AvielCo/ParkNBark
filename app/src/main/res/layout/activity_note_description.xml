<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/mainBackground"
    tools:context="com.evan.parknbark.bulletinboard.NoteDescriptionActivity">

    <TextView
        android:id="@+id/text_view_date_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/date"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/mainText" />

    <TextView
        android:id="@+id/text_view_description_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_date_des"
        android:layout_alignParentStart="true"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/description"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/mainText" />

</RelativeLayout>
