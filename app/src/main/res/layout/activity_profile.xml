<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    android:orientation="vertical"
    android:paddingStart="30dp"
    android:paddingTop="30dp"
    android:paddingEnd="30dp"
    tools:context=".profile.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_dog_name"
            style="@style/TextInputLayoutStyle"
            app:hintTextColor="@color/mainText">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/dog_name"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_dog_breed"
            style="@style/TextInputLayoutStyle"
            app:hintTextColor="@color/mainText">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/dog_breed"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_dog_age"
            style="@style/TextInputLayoutStyle"
            app:hintTextColor="@color/mainText">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/dog_age"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_btn"
            android:drawableEnd="@drawable/baseline_add_a_photo_24"
            android:drawablePadding="10dp"
            android:onClick="uploadImage"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/upload_image"
            android:textColor="@color/textAlt"
            android:backgroundTint="@color/mainButton"/>

        <ImageView
            android:id="@+id/image_view_dog_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_btn"
            android:drawableEnd="@drawable/baseline_save_alt_24"
            android:drawablePadding="10dp"
            android:onClick="saveProfile"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/save_image"
            android:textColor="@color/textAlt"
            android:backgroundTint="@color/mainButton"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_btn"
            android:onClick="showProfiles"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/show_profiles"
            android:textColor="@color/textAlt"
            android:backgroundTint="@color/mainButton"/>
    </LinearLayout>
</ScrollView>