<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evan.parknbark">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:extractNativeLibs="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- MAIN ACTIVITY -->
        <activity
            android:name=".utilities.MainActivity"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- App settings (User) -->
        <activity
            android:name=".settings.SettingsActivity"
            android:launchMode="singleInstance"
            android:parentActivityName=".maps.MapActivity" />

        <!-- Login, Register, Reset/Change password -->
        <activity
            android:name=".emailpassword.LoginActivity"
            android:launchMode="singleInstance"
            android:parentActivityName=".utilities.MainActivity" />
        <activity
            android:name=".emailpassword.RegisterActivity"
            android:launchMode="singleInstance"
            android:parentActivityName=".utilities.MainActivity" />
        <activity
            android:name=".emailpassword.ResetPassActivity"
            android:launchMode="singleInstance"
            android:parentActivityName=".emailpassword.LoginActivity" />
        <activity
            android:name=".emailpassword.ChangePassActivity"
            android:launchMode="singleInstance"
            android:parentActivityName=".settings.SettingsActivity" />

        <!-- Map -->
        <activity
            android:name=".maps.MapActivity"
            android:launchMode="singleInstance"
            android:parentActivityName=".utilities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".maps.LocationsActivity"
            android:launchMode="singleInstance"
            android:parentActivityName=".maps.MapActivity" />

        <!-- Bulletin Board -->
        <activity
            android:name=".bulletinboard.BulletinBoardActivity"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".bulletinboard.NewNoteActivity"
            android:launchMode="singleInstance"
            android:parentActivityName=".bulletinboard.BulletinBoardActivity" />
        <activity
            android:name=".bulletinboard.NoteDescriptionActivity"
            android:launchMode="singleInstance"
            android:parentActivityName=".bulletinboard.BulletinBoardActivity" />

        <!-- Profile -->
        <activity
            android:name=".profile.ProfileActivity"
            android:launchMode="singleInstance"
            android:parentActivityName=".emailpassword.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".profile.ImagesActivity"
            android:launchMode="singleInstance"
            android:parentActivityName=".profile.ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- ETC -->
        <activity
            android:name=".contacts.ContactActivity"
            android:launchMode="singleInstance"
            android:parentActivityName=".maps.MapActivity" />
        <activity
            android:name=".RateUsActivity"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog.Alert" />


        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>